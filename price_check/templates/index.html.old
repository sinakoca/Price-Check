<div>
    <form action='/search?q= {{ query }}' method=GET >
    	<input id="q" name="q" value="{{ query }}" type="text">
    	<input type='submit' value="Search">
	</form>
	Your location: {{ city }}
</div>


<div>Products:</div>

<br/>
{% for p in products %}
<div>{{ p.name }} : {{ p.price }}
    <form action='/add' method=GET>
        <input type='hidden' name='product_id' value='{{ p.id }}' />
        <input type='text' name='quantity' />
        <input type='submit' value='Add to WishList' />
    </form>
</div>
{% endfor %}

<div>WishList:</div>
{% for p, q in wish_list.products %}
<div>
    {{ p.name }} - {{ q }}
</div>
{% endfor %}
